javascript:
  $("#student-selection").submit(function(event) {
    event.preventDefault();
    let url = "/admin/top_voted_doubt"
    if ($("#start") != "" && $("#end") != "") {
      url += "?start=" + $("#start").val();
      url += "&end=" + $("#end").val();
    }
    window.location.href = url;
  });