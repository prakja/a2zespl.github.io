.container.mt-2
  form#student-selection action="/" method="get"
    .form-group
      label for="start" Choose start date
      input#start type="date" value="#{@start}"
    .form-group
      label for="end" Choose end date
      input#end type="date" value="#{@end}"
    button.btn.btn-primary type="submit" Get

  .phy
    h3 Physics
    a target="_blank" href="#{'/admin/doubt_chat_doubts/' + @phy_doubt.id.to_s}" = @phy_doubt.id
  
  .chem
    h3 Chemistry
    a target="_blank" href="#{'/admin/doubt_chat_doubts/' + @chem_doubt.id.to_s}" = @chem_doubt.id

  .bio
    h3 Biology
