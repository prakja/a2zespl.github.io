<% added_hidden_topic_field = false %>
<% topics.each do |topic| %>
  <% if not Topic.name_with_subject.collect{|a,b| b}.include?(topic.id) %>
    <input type="hidden" name="flash_card[topic_ids][]" value="<%=topic.id%>"/>
    <% added_hidden_topic_field = true %>
  <% end %>
<% end %>
<% if added_hidden_topic_field == false %>
  <input type="hidden" name="flash_card[topic_ids][]" value=""/>
<% end %>
